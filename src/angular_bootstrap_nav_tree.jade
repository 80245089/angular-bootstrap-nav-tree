
ul.nav.nav-list.abn-tree

	li.abn-tree-row(
		ng-repeat='row in tree_rows | filter:{visible:true} track by row.branch.uid'
		ng-animate="'abn-tree-animate'"
		ng-class="'level-' + {{ row.level }} + (row.branch.selected ? ' active':'')"
		)

		a(ng-click="user_clicks_branch(row.branch)")

			// "tree-icon" is the plus/minus thing for expand/collapse
			// "branch-icon" is the icon for the data of the branch 
			
			i.indented.tree-icon(
				ng-class="row.tree_icon"
				ng-click="row.branch.expanded = !row.branch.expanded"
				ng-visibile="row.branch.children"
				) 

			i.indented.branch-icon(
				ng-class="row.branch.icon"
				ng-click="row.branch.expanded = !row.branch.expanded"
				ng-visibile="row.branch.children"
				) 

			span.indented.tree-label {{ row.label }}
